---
import Layout from "../../layouts/Layout.astro";
import ContactForm from "../../components/ContactForm.astro";
import PhilosophyCard from "../../components/PhilosophyCard.astro";
import { Image } from "astro:assets";
import brandIcon from "../../assets/brand-icon.png";

const title = "About Me - ArceApps";
const description =
  "Conoce más sobre ArceApps, mi stack tecnológico y mi enfoque en el desarrollo Android y la Inteligencia Artificial.";

// Categorías de tecnologías
const techStack = [
  {
    title: "Android & Arquitectura",
    icon: "android",
    description:
      "Desarrollo nativo moderno centrado en la calidad y la escalabilidad.",
    skills: [
      { name: "Kotlin", icon: "https://cdn.simpleicons.org/kotlin/7F52FF" },
      {
        name: "Android SDK",
        icon: "https://cdn.simpleicons.org/android/3DDC84",
      },
      {
        name: "Jetpack Compose",
        icon: "https://cdn.simpleicons.org/jetpackcompose/4285F4",
      },
      {
        name: "Material Design 3",
        icon: "https://cdn.simpleicons.org/materialdesign/757575",
      },
      {
        name: "Clean Architecture",
        icon: "https://cdn.simpleicons.org/codeproject/000000",
      }, // Generic code icon
      {
        name: "Coroutines & Flow",
        icon: "https://cdn.simpleicons.org/kotlin/7F52FF",
      },
      {
        name: "Hilt / Koin",
        icon: "https://cdn.simpleicons.org/google/4285F4",
      },
      { name: "Room", icon: "https://cdn.simpleicons.org/sqlite/003B57" },
      { name: "Retrofit", icon: "https://cdn.simpleicons.org/square/000000" },
      {
        name: "WorkManager",
        icon: "https://cdn.simpleicons.org/android/3DDC84",
      },
    ],
  },
  {
    title: "Backend & Cloud",
    icon: "cloud",
    description:
      "Infraestructura robusta y escalable para aplicaciones conectadas.",
    skills: [
      { name: "Firebase", icon: "https://cdn.simpleicons.org/firebase/FFCA28" },
      {
        name: "Firestore",
        icon: "https://cdn.simpleicons.org/firebase/FFCA28",
      },
      {
        name: "Crashlytics",
        icon: "https://cdn.simpleicons.org/firebase/FFCA28",
      },
      {
        name: "Google Analytics",
        icon: "https://cdn.simpleicons.org/googleanalytics/E37400",
      },
      { name: "Ktor", icon: "https://cdn.simpleicons.org/ktor/00AFBA" },
      {
        name: "Google Cloud",
        icon: "https://cdn.simpleicons.org/googlecloud/4285F4",
      },
    ],
  },
  {
    title: "DevOps & Herramientas",
    icon: "build",
    description:
      "Automatización y control de versiones para un flujo de trabajo eficiente.",
    skills: [
      { name: "Git", icon: "https://cdn.simpleicons.org/git/F05032" },
      { name: "GitHub", icon: "https://cdn.simpleicons.org/github/181717" },
      {
        name: "GitHub Actions",
        icon: "https://cdn.simpleicons.org/githubactions/2088FF",
      },
      { name: "Gradle", icon: "https://cdn.simpleicons.org/gradle/02303A" },
      { name: "CI/CD", icon: "https://cdn.simpleicons.org/circleci/343434" }, // Generic CI
    ],
  },
  {
    title: "Inteligencia Artificial",
    icon: "psychology",
    description:
      "Potenciando el desarrollo con las últimas herramientas de IA.",
    skills: [
      {
        name: "Gemini",
        icon: "https://cdn.simpleicons.org/googlegemini/8E75B2",
      },
      {
        name: "GitHub Copilot",
        icon: "https://cdn.simpleicons.org/githubcopilot/000000",
      },
      { name: "ChatGPT", icon: "https://cdn.simpleicons.org/chatgpt/74aa9c" },
      {
        name: "Jules (Agent)",
        icon: "https://cdn.simpleicons.org/robotframework/000000",
      }, // Placeholder for Jules
      {
        name: "Agent-Skills",
        icon: "https://cdn.simpleicons.org/markdown/000000",
      },
      {
        name: "Copilot CLI",
        icon: "https://cdn.simpleicons.org/github/181717",
      },
      { name: "Gemini CLI", icon: "https://cdn.simpleicons.org/google/4285F4" },
    ],
  },
];
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <div class="bg-surface-variant/30 dark:bg-dark-surface-variant/30 py-20">
    <div class="container mx-auto px-4">
      <div
        class="flex flex-col md:flex-row items-center gap-12 max-w-5xl mx-auto"
      >
        <!-- Profile Image (Web Icon) -->
        <div
          class="w-48 h-48 md:w-56 md:h-56 rounded-full bg-gradient-to-br from-primary to-secondary p-1 shrink-0 shadow-xl elevation-3 animate-fade-in"
        >
          <div
            class="w-full h-full rounded-full bg-white dark:bg-gray-900 flex items-center justify-center overflow-hidden"
          >
            <Image
              src={brandIcon}
              alt="ArceApps Logo"
              class="w-full h-full object-cover"
              width={224}
              height={224}
            />
          </div>
        </div>

        <div class="text-center md:text-left space-y-4">
          <h1
            class="text-5xl md:text-6xl font-bold text-on-surface dark:text-dark-on-surface tracking-tight"
          >
            About Me
          </h1>
          <h2 class="text-2xl text-primary font-medium">
            ArceApps <span
              class="text-on-surface-variant dark:text-dark-on-surface-variant text-lg mx-2"
              >|</span
            > Android Developer & AI Enthusiast
          </h2>
          <p
            class="text-lg text-on-surface-variant dark:text-dark-on-surface-variant leading-relaxed max-w-2xl mx-auto md:mx-0"
          >
            Me especializo en crear aplicaciones móviles nativas de alto
            rendimiento y en explorar las fronteras de la Inteligencia
            Artificial para optimizar el desarrollo de software. Mi pasión es
            transformar ideas complejas en experiencias de usuario elegantes,
            útiles y respetuosas con la privacidad.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Philosophy Section -->
  <div class="container mx-auto px-4 mt-20">
    <PhilosophyCard />
  </div>

  <!-- Tech Stack Section -->
  <section class="py-20 bg-background dark:bg-dark-background">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="text-center mb-16 fade-in-section">
        <h3
          class="text-3xl font-bold text-on-surface dark:text-dark-on-surface mb-4"
        >
          Tech Stack
        </h3>
        <p
          class="text-on-surface-variant dark:text-dark-on-surface-variant max-w-2xl mx-auto"
        >
          Herramientas, lenguajes y tecnologías que utilizo día a día para
          construir soluciones digitales modernas.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          techStack.map((category) => (
            <div class="bg-surface dark:bg-dark-surface rounded-2xl p-8 shadow-sm border border-gray-100 dark:border-gray-800 hover:shadow-md transition-shadow fade-in-section">
              <div class="flex items-center gap-4 mb-6">
                <div class="p-3 bg-primary/10 rounded-xl text-primary">
                  <span class="material-icons text-3xl" aria-hidden="true">
                    {category.icon}
                  </span>
                </div>
                <div>
                  <h4 class="text-xl font-bold text-on-surface dark:text-dark-on-surface">
                    {category.title}
                  </h4>
                  <p class="text-sm text-on-surface-variant dark:text-dark-on-surface-variant mt-1">
                    {category.description}
                  </p>
                </div>
              </div>

              <div class="flex flex-wrap gap-3">
                {category.skills.map((skill) => (
                  <div class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-surface-variant/50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 hover:border-primary/50 transition-colors group">
                    <img
                      src={skill.icon}
                      alt=""
                      width="20"
                      height="20"
                      loading="lazy"
                      decoding="async"
                      class="w-5 h-5 opacity-70 group-hover:opacity-100 transition-opacity dark:invert"
                    />
                    <span class="text-sm font-medium text-on-surface dark:text-dark-on-surface whitespace-nowrap">
                      {skill.name}
                    </span>
                  </div>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Mission & Values Section -->
  <section class="py-20 bg-surface-variant/10 dark:bg-dark-surface-variant/10">
    <div class="container mx-auto px-4 max-w-4xl">
      <div
        class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center fade-in-section"
      >
        <div>
          <h3
            class="text-3xl font-bold mb-6 text-on-surface dark:text-dark-on-surface flex items-center gap-3"
          >
            <span
              class="material-icons text-primary text-4xl"
              aria-hidden="true">rocket_launch</span
            >
            Mi Misión
          </h3>
          <p
            class="text-on-surface-variant dark:text-dark-on-surface-variant leading-relaxed mb-6 text-lg"
          >
            Crear software que no solo funcione, sino que deleite. Creo
            firmemente que las aplicaciones deben ser <strong>rápidas</strong>, <strong
              >intuitivas</strong
            > y respetar al usuario.
          </p>
          <p
            class="text-on-surface-variant dark:text-dark-on-surface-variant leading-relaxed text-lg"
          >
            Por eso, todas mis apps están diseñadas con un enfoque <strong
              >"Privacy First"</strong
            >, minimizando la recolección de datos y maximizando la
            transparencia.
          </p>
        </div>
        <div
          class="bg-surface dark:bg-dark-surface p-8 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700"
        >
          <ul class="space-y-4">
            <li
              class="flex items-center gap-3 text-on-surface dark:text-dark-on-surface"
            >
              <span class="material-icons text-green-500" aria-hidden="true"
                >check_circle</span
              >
              <span>Calidad de Código</span>
            </li>
            <li
              class="flex items-center gap-3 text-on-surface dark:text-dark-on-surface"
            >
              <span class="material-icons text-green-500" aria-hidden="true"
                >check_circle</span
              >
              <span>Experiencia de Usuario (UX)</span>
            </li>
            <li
              class="flex items-center gap-3 text-on-surface dark:text-dark-on-surface"
            >
              <span class="material-icons text-green-500" aria-hidden="true"
                >check_circle</span
              >
              <span>Privacidad y Seguridad</span>
            </li>
            <li
              class="flex items-center gap-3 text-on-surface dark:text-dark-on-surface"
            >
              <span class="material-icons text-green-500" aria-hidden="true"
                >check_circle</span
              >
              <span>Innovación Continua</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-20">
    <div class="container mx-auto px-4 max-w-4xl">
      <div class="text-center mb-12 fade-in-section">
        <h3
          class="text-3xl font-bold mb-4 text-on-surface dark:text-dark-on-surface flex items-center justify-center gap-2"
        >
          <span class="material-icons text-primary" aria-hidden="true"
            >email</span
          >
          Contacto
        </h3>
        <p
          class="text-lg text-on-surface-variant dark:text-dark-on-surface-variant leading-relaxed"
        >
          ¿Tienes alguna pregunta, sugerencia o simplemente quieres saludar? Me
          encantaría escucharte.
        </p>
      </div>

      <div class="fade-in-section">
        <ContactForm lang="es" />
      </div>
    </div>
  </section>
</Layout>

<style>
  .elevation-3 {
    box-shadow:
      0 10px 20px rgba(0, 0, 0, 0.19),
      0 6px 6px rgba(0, 0, 0, 0.23);
  }

  @media (prefers-reduced-motion: no-preference) {
    .animate-fade-in {
      animation: fadeIn 1s ease-out;
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

---
import Layout from "../../layouts/Layout.astro";
import BlogCard from "../../components/BlogCard.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import type { Page, GetStaticPathsOptions } from "astro";
import { slugify } from "../../utils/slugs";

export async function getStaticPaths({ paginate }: { paginate: any }) {
  const allPosts = (await getCollection("blog", ({ data }) => !data.draft)).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
  );

  const allTags = [...new Set(allPosts.flatMap((post) => post.data.tags || []))].sort();

  return paginate(allPosts, { pageSize: 6, props: { allTags } });
}

interface Props {
  page: Page<CollectionEntry<"blog">>;
  allTags: string[];
}

const { page, allTags } = Astro.props;
---

<Layout title="Blog - ArceApps">
  <div class="bg-surface-variant/30 dark:bg-dark-surface-variant/30 py-16 md:py-24 fade-in-section">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 text-on-surface dark:text-dark-on-surface">Blog</h1>
      <p class="text-xl text-on-surface-variant dark:text-dark-on-surface-variant max-w-2xl mx-auto">
        Explora nuestros artículos sobre desarrollo Android, mejores prácticas, arquitectura de software y novedades tecnológicas.
      </p>
    </div>
  </div>

  <section class="py-16 md:py-24">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {page.data.map((post) => (
          <BlogCard post={post} />
        ))}
      </div>

      <!-- Pagination Controls -->
      <div class="flex justify-center mt-12 gap-4">
        {page.url.prev && (
          <a href={page.url.prev} class="inline-flex items-center px-6 py-2 rounded-lg bg-surface dark:bg-dark-surface border border-primary text-primary font-medium hover:bg-primary hover:text-white transition-colors duration-300 focus-visible:ring-2 focus-visible:ring-primary focus-visible:outline-none">
            <span class="material-icons mr-2 text-base" aria-hidden="true">arrow_back</span>
            Anterior
          </a>
        )}
        {page.url.next && (
          <a href={page.url.next} class="inline-flex items-center px-6 py-2 rounded-lg bg-surface dark:bg-dark-surface border border-primary text-primary font-medium hover:bg-primary hover:text-white transition-colors duration-300 focus-visible:ring-2 focus-visible:ring-primary focus-visible:outline-none">
            Siguiente
            <span class="material-icons ml-2 text-base" aria-hidden="true">arrow_forward</span>
          </a>
        )}
      </div>
    </div>
  </section>

  <section class="bg-surface-variant/30 dark:bg-dark-surface-variant/30 py-16 md:py-24">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-2xl font-bold mb-6 text-on-surface dark:text-dark-on-surface">Filtrar por etiquetas</h2>
      <div class="flex flex-wrap justify-center gap-3 animate-fade-in-up">
        {allTags.map((tag) => (
          <a
            href={`/blog/tag/${slugify(tag)}/`}
            class="px-4 py-2 rounded-full bg-surface dark:bg-dark-surface border border-primary/20 hover:border-primary text-on-surface dark:text-dark-on-surface hover:bg-primary hover:text-white transition-all duration-300 text-sm font-medium shadow-sm hover:shadow-md focus-visible:ring-2 focus-visible:ring-primary focus-visible:outline-none"
          >
            #{tag}
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>

---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import BlogCard from '../../components/BlogCard.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content, headings } = await post.render();

const formattedDate = post.data.pubDate.toLocaleDateString('es-ES', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Filter headings for TOC (H2 and H3 only)
const tocHeadings = headings.filter(h => h.depth === 2 || h.depth === 3);

// Related posts logic
const allPosts = await getCollection('blog');
const currentTags = post.data.tags || [];
const relatedPosts = allPosts
  .filter(p => p.slug !== post.slug)
  .map(p => {
    const commonTags = (p.data.tags || []).filter(t => currentTags.includes(t)).length;
    return { ...p, commonTags };
  })
  .sort((a, b) => {
    if (b.commonTags !== a.commonTags) return b.commonTags - a.commonTags;
    return b.data.pubDate.valueOf() - a.data.pubDate.valueOf();
  })
  .slice(0, 3);
---

<Layout title={`${post.data.title} - ArceApps Blog`} description={post.data.description}>
  <!-- Progress Bar -->
  <div id="progress-container" class="fixed top-0 left-0 w-full h-1 z-[100] bg-transparent">
    <div id="progress-bar" class="h-full bg-secondary w-0 transition-all duration-100 ease-out"></div>
  </div>

  <article class="pt-24 pb-20">
    <!-- Header -->
    <header class="container mx-auto px-4 mb-12 max-w-4xl text-center">
      <div class="flex flex-wrap items-center justify-center gap-2 mb-6">
        {post.data.tags && post.data.tags.map((tag: string) => (
           <span class="px-3 py-1 rounded-full bg-primary/10 text-primary text-sm font-bold uppercase tracking-wider whitespace-nowrap">
             {tag}
           </span>
        ))}
      </div>

      <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold mb-6 text-on-surface dark:text-dark-on-surface leading-tight">
        {post.data.title}
      </h1>

      <div class="flex items-center justify-center text-on-surface-variant dark:text-dark-on-surface-variant text-lg">
        <span class="material-icons mr-2 text-primary">calendar_today</span>
        <time datetime={post.data.pubDate.toISOString()}>{formattedDate}</time>
      </div>
    </header>

    <!-- Hero Image -->
    {post.data.heroImage && (
      <div class="container mx-auto px-4 mb-16 max-w-5xl">
        <div class="aspect-video rounded-2xl overflow-hidden shadow-xl elevation-2">
          <img
            src={post.data.heroImage}
            alt={post.data.title}
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    )}

    <!-- Main Grid Layout -->
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">

        <!-- Sidebar (Desktop TOC) -->
        <aside class="hidden lg:block lg:col-span-1">
          <div class="sticky top-24">
            {tocHeadings.length > 0 && (
              <nav class="p-4 bg-surface dark:bg-dark-surface rounded-xl border border-gray-200 dark:border-gray-800">
                <h2 class="text-lg font-bold mb-4 text-on-surface dark:text-dark-on-surface flex items-center">
                  <span class="material-icons mr-2 text-primary">list</span>
                  Índice
                </h2>
                <ul class="space-y-2 text-sm">
                  {tocHeadings.map(heading => (
                    <li>
                      <a
                        href={`#${heading.slug}`}
                        class:list={[
                          "text-on-surface-variant dark:text-dark-on-surface-variant hover:text-primary transition-colors block py-1",
                          { "pl-0": heading.depth === 2, "pl-3": heading.depth === 3 }
                        ]}
                      >
                        {heading.text}
                      </a>
                    </li>
                  ))}
                </ul>
              </nav>
            )}

            <div class="mt-8">
               <a href="/blog" class="inline-flex items-center font-medium text-on-surface-variant dark:text-dark-on-surface-variant hover:text-primary transition-colors">
                  <span class="material-icons mr-2">arrow_back</span>
                  Volver al Blog
               </a>
            </div>
          </div>
        </aside>

        <!-- Content Column -->
        <div class="lg:col-span-3">

          <!-- Mobile TOC -->
          <div class="lg:hidden mb-8">
             {tocHeadings.length > 0 && (
                <details class="bg-surface dark:bg-dark-surface rounded-xl border border-gray-200 dark:border-gray-800 overflow-hidden group">
                   <summary class="p-4 flex items-center justify-between cursor-pointer font-bold text-on-surface dark:text-dark-on-surface list-none">
                      <div class="flex items-center">
                         <span class="material-icons mr-2 text-primary">list</span>
                         Índice de contenidos
                      </div>
                      <span class="material-icons group-open:rotate-180 transition-transform">expand_more</span>
                   </summary>
                   <nav class="px-4 pb-4">
                      <ul class="space-y-2 text-sm pt-2 border-t border-gray-100 dark:border-gray-700">
                         {tocHeadings.map(heading => (
                            <li>
                               <a
                                  href={`#${heading.slug}`}
                                  class:list={[
                                    "text-on-surface-variant dark:text-dark-on-surface-variant hover:text-primary transition-colors block py-1",
                                    { "pl-0": heading.depth === 2, "pl-4": heading.depth === 3 }
                                  ]}
                               >
                                  {heading.text}
                               </a>
                            </li>
                         ))}
                      </ul>
                   </nav>
                </details>
             )}
          </div>

          <!-- Article Content -->
          <div class="prose prose-slate dark:prose-invert md:prose-lg max-w-none">
            <Content />
          </div>

          <!-- Share / Back (Mobile only since desktop has it in sidebar, or keep bottom one as well?)
               User asked for responsive. Keeping a bottom nav is good UX.
          -->
          <div class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-800 lg:hidden">
             <a href="/blog" class="inline-flex items-center font-medium text-on-surface-variant dark:text-dark-on-surface-variant hover:text-primary transition-colors">
                <span class="material-icons mr-2">arrow_back</span>
                Volver al Blog
             </a>
          </div>

        </div>
      </div>
    </div>

    <!-- Related Articles -->
    {relatedPosts.length > 0 && (
       <div class="container mx-auto px-4 mt-20 max-w-6xl border-t border-gray-200 dark:border-gray-800 pt-16">
          <h2 class="text-3xl font-bold mb-8 text-on-surface dark:text-dark-on-surface text-center md:text-left">
             Artículos relacionados
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
             {relatedPosts.map((post) => (
                <BlogCard post={post} />
             ))}
          </div>
       </div>
    )}

  </article>
</Layout>

<script>
  // Reading Progress Bar
  const progressBar = document.getElementById('progress-bar');

  window.addEventListener('scroll', () => {
    const scrollTop = document.documentElement.scrollTop || document.body.scrollTop;
    const scrollHeight = document.documentElement.scrollHeight - document.documentElement.clientHeight;
    const scrolled = (scrollTop / scrollHeight) * 100;

    if (progressBar) {
      progressBar.style.width = scrolled + "%";
    }
  });
</script>

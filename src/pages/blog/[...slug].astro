---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import BlogCard from '../../components/BlogCard.astro';
import { slugify } from '../../utils/slugs';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content, headings } = await post.render();

const wordCount = post.body.split(/\s+/g).length;
const readingTime = Math.ceil(wordCount / 200);

const formattedDate = post.data.pubDate.toLocaleDateString('es-ES', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Filter headings for TOC (H2 and H3 only)
const tocHeadings = headings.filter(h => h.depth === 2 || h.depth === 3);

// Related posts logic
const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const currentTags = post.data.tags || [];
const relatedPosts = allPosts
  .filter(p => p.slug !== post.slug)
  .map(p => {
    const commonTags = (p.data.tags || []).filter(t => currentTags.includes(t)).length;
    return { ...p, commonTags };
  })
  .sort((a, b) => {
    if (b.commonTags !== a.commonTags) return b.commonTags - a.commonTags;
    return b.data.pubDate.valueOf() - a.data.pubDate.valueOf();
  })
  .slice(0, 3);
---

<Layout title={`${post.data.title} - ArceApps Blog`} description={post.data.description}>
  <!-- Progress Bar -->
  <div id="progress-container" class="fixed top-0 left-0 w-full h-1 z-[100] bg-transparent">
    <div id="progress-bar" class="h-full bg-secondary w-0 transition-all duration-100 ease-out"></div>
  </div>

  <article class="pt-24 pb-20">
    <!-- Header -->
    <header class="container mx-auto px-4 mb-12 max-w-4xl text-center">
      <div class="flex flex-wrap items-center justify-center gap-2 mb-6">
        {post.data.tags && post.data.tags.map((tag: string) => (
           <a 
             href={`/blog/tag/${slugify(tag)}/`}
             class="px-3 py-1 rounded-full bg-primary/10 text-primary text-sm font-bold uppercase tracking-wider whitespace-nowrap hover:bg-primary/20 transition-colors focus-visible:ring-2 focus-visible:ring-primary focus-visible:outline-none"
           >
             #{tag}
           </a>
        ))}
      </div>

      <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold mb-6 text-on-surface dark:text-dark-on-surface leading-tight">
        {post.data.title}
      </h1>

      <div class="flex items-center justify-center gap-6 text-on-surface-variant dark:text-dark-on-surface-variant text-lg">
        <div class="flex items-center">
          <span class="material-icons mr-2 text-primary" aria-hidden="true">calendar_today</span>
          <time datetime={post.data.pubDate.toISOString()}>{formattedDate}</time>
        </div>
        <div class="flex items-center">
          <span class="material-icons mr-2 text-primary" aria-hidden="true">schedule</span>
          <span>⏱️ {readingTime} min de lectura</span>
        </div>
      </div>
    </header>

    <!-- Hero Image -->
    {post.data.heroImage && (
      <div class="container mx-auto px-4 mb-16 max-w-5xl">
        <div class="aspect-video rounded-2xl overflow-hidden shadow-xl elevation-2">
          <img
            src={post.data.heroImage}
            alt={post.data.title}
            class="w-full h-full object-cover"
            loading="eager"
            fetchpriority="high"
            width="1280"
            height="720"
          />
        </div>
      </div>
    )}

    <!-- Main Grid Layout -->
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">

        <!-- Sidebar (Desktop TOC) -->
        <aside class="hidden lg:block lg:col-span-1">
          <div class="sticky top-24">
            {tocHeadings.length > 0 && (
              <nav class="p-4 bg-surface dark:bg-dark-surface rounded-xl border border-gray-200 dark:border-gray-800">
                <h2 class="text-lg font-bold mb-4 text-on-surface dark:text-dark-on-surface flex items-center">
                  <span class="material-icons mr-2 text-primary" aria-hidden="true">list</span>
                  Índice
                </h2>
                <ul class="space-y-2 text-sm">
                  {tocHeadings.map(heading => (
                    <li>
                      <a
                        href={`#${heading.slug}`}
                        class:list={[
                          "text-on-surface-variant dark:text-dark-on-surface-variant hover:text-primary transition-colors block py-1 focus-visible:ring-2 focus-visible:ring-primary focus-visible:outline-none rounded",
                          { "pl-0": heading.depth === 2, "pl-3": heading.depth === 3 }
                        ]}
                      >
                        {heading.text}
                      </a>
                    </li>
                  ))}
                </ul>
              </nav>
            )}

            <div class="mt-8">
               <a href="/blog" class="inline-flex items-center font-medium text-on-surface-variant dark:text-dark-on-surface-variant hover:text-primary transition-colors focus-visible:ring-2 focus-visible:ring-primary focus-visible:outline-none rounded">
                  <span class="material-icons mr-2" aria-hidden="true">arrow_back</span>
                  Volver al Blog
               </a>
            </div>
          </div>
        </aside>

        <!-- Content Column -->
        <div class="lg:col-span-3">

          <!-- Mobile TOC -->
          <div class="lg:hidden mb-8">
             {tocHeadings.length > 0 && (
                <details class="bg-surface dark:bg-dark-surface rounded-xl border border-gray-200 dark:border-gray-800 overflow-hidden group">
                   <summary class="p-4 flex items-center justify-between cursor-pointer font-bold text-on-surface dark:text-dark-on-surface list-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:outline-none rounded-xl">
                      <div class="flex items-center">
                         <span class="material-icons mr-2 text-primary" aria-hidden="true">list</span>
                         Índice de contenidos
                      </div>
                      <span class="material-icons group-open:rotate-180 transition-transform" aria-hidden="true">expand_more</span>
                   </summary>
                   <nav class="px-4 pb-4">
                      <ul class="space-y-2 text-sm pt-2 border-t border-gray-100 dark:border-gray-700">
                         {tocHeadings.map(heading => (
                            <li>
                               <a
                                  href={`#${heading.slug}`}
                                  class:list={[
                                    "text-on-surface-variant dark:text-dark-on-surface-variant hover:text-primary transition-colors block py-1 focus-visible:ring-2 focus-visible:ring-primary focus-visible:outline-none rounded",
                                    { "pl-0": heading.depth === 2, "pl-4": heading.depth === 3 }
                                  ]}
                               >
                                  {heading.text}
                               </a>
                            </li>
                         ))}
                      </ul>
                   </nav>
                </details>
             )}
          </div>

          <!-- Article Content -->
          <div class="prose prose-slate dark:prose-invert md:prose-lg max-w-none">
            <Content />
          </div>

          <!-- Share / Back (Mobile only since desktop has it in sidebar, or keep bottom one as well?)
               User asked for responsive. Keeping a bottom nav is good UX.
          -->
          <div class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-800 lg:hidden">
             <a href="/blog" class="inline-flex items-center font-medium text-on-surface-variant dark:text-dark-on-surface-variant hover:text-primary transition-colors focus-visible:ring-2 focus-visible:ring-primary focus-visible:outline-none rounded">
                <span class="material-icons mr-2" aria-hidden="true">arrow_back</span>
                Volver al Blog
             </a>
          </div>

        </div>
      </div>
    </div>

    <!-- Related Articles -->
    {relatedPosts.length > 0 && (
      <div class="mt-20 py-16 bg-surface-variant/30 dark:bg-dark-surface-variant/30 fade-in-section">
         <div class="container mx-auto px-4 max-w-6xl">
            <h2 class="text-3xl font-bold mb-10 text-on-surface dark:text-dark-on-surface text-center flex items-center justify-center gap-3">
               <span class="material-icons text-primary text-4xl" aria-hidden="true">style</span>
               También te puede interesar
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
               {relatedPosts.map((post) => (
                  <BlogCard post={post} />
               ))}
            </div>
         </div>
      </div>
    )}

  </article>
</Layout>

<style is:global>
  /* Copy Button Styles */
  .copy-code-btn {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    padding: 0.25rem;
    background-color: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 0.375rem;
    color: #e5e7eb;
    cursor: pointer;
    transition: all 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .copy-code-btn:hover {
    background-color: rgba(255, 255, 255, 0.2);
    color: white;
  }

  .copy-code-btn .material-icons {
    font-size: 1.25rem;
  }

  .prose pre {
    position: relative;
  }
</style>

<script src="../../scripts/blog.ts"></script>

---
import Layout from "../../layouts/Layout.astro";
import BlogCard from "../../components/BlogCard.astro";
import { getCollection } from "astro:content";

const allPosts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog - ArceApps">
  <div class="bg-surface-variant/30 dark:bg-dark-surface-variant/30 py-16 md:py-24">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 text-on-surface dark:text-dark-on-surface">Blog</h1>
      <p class="text-xl text-on-surface-variant dark:text-dark-on-surface-variant max-w-2xl mx-auto">
        Explora nuestros artículos sobre desarrollo Android, mejores prácticas, arquitectura de software y novedades tecnológicas.
      </p>
    </div>
  </div>

  <section class="py-16 md:py-24">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {allPosts.map((post) => (
          <BlogCard post={post} />
        ))}
      </div>
    </div>
  </section>
</Layout>

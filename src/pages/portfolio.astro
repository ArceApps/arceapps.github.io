---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";

const projects = [
  {
    title: "PuzzleSuite",
    description:
      "Colección definitiva de juegos de lógica y puzzles. Sudoku, Kakuro, y más en una sola app.",
    image: "/images/project-placeholder.svg",
    tags: ["Android", "Kotlin", "Jetpack Compose"],
    link: "/projects/puzzlesuite",
  },
  {
    title: "BrainTraining",
    description:
      "Ejercita tu mente con juegos diseñados para mejorar tu memoria y reflejos.",
    image: "/images/project-placeholder.svg",
    tags: ["Android", "Game Dev", "Education"],
    link: "/projects/braintraining",
  },
  {
    title: "TaskMaster",
    description:
      "Organiza tu vida con esta potente herramienta de gestión de tareas y productividad.",
    image: "/images/project-placeholder.svg",
    tags: ["Productivity", "Kotlin", "Room DB"],
    link: "/projects/taskmaster",
  },
  {
    title: "WeatherNow",
    description:
      "Aplicación del clima en tiempo real con pronósticos precisos y diseño minimalista.",
    image: "/images/project-placeholder.svg",
    tags: ["Android", "API Integration", "Material Design 3"],
    link: "/projects/weathernow",
  },
  {
    title: "CryptoTracker",
    description:
      "Sigue el precio de tus criptomonedas favoritas en tiempo real.",
    image: "/images/project-placeholder.svg",
    tags: ["Finance", "API", "Charts"],
    link: "/projects/cryptotracker",
  },
  {
    title: "FitLife",
    description:
      "Tu compañero personal de fitness. Rutinas, seguimiento de dieta y más.",
    image: "/images/project-placeholder.svg",
    tags: ["Health", "Fitness", "Sensors"],
    link: "/projects/fitlife",
  },
];
---

<Layout title="Portfolio - ArceApps">
  <div class="pt-24 pb-20 relative overflow-hidden">
    <!-- Background decoration -->
    <div
      class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-96 bg-primary/10 blur-[100px] rounded-full pointer-events-none"
    >
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h1
          class="text-5xl font-bold text-slate-900 dark:text-white mb-6 font-heading"
        >
          Nuestro Portfolio
        </h1>
        <p class="text-xl text-slate-600 dark:text-slate-400">
          Explora nuestra colección de aplicaciones y proyectos. Cada uno
          representa nuestro compromiso con la calidad, el diseño y la
          innovación.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => <ProjectCard {...project} />)}
      </div>
    </div>
  </div>
</Layout>

---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const stories = (await getCollection("story")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Mi Historia - ArceApps">
  <div class="bg-surface-variant/30 dark:bg-dark-surface-variant/30 py-16 md:py-24 fade-in-section">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 text-on-surface dark:text-dark-on-surface">Mi Historia</h1>
      <p class="text-xl text-on-surface-variant dark:text-dark-on-surface-variant max-w-2xl mx-auto">
        Un registro del viaje, los aprendizajes y la evolución de este portafolio.
      </p>
    </div>
  </div>

  <section class="py-16 md:py-24">
    <div class="container mx-auto px-4 max-w-4xl">
      <div class="space-y-12 relative before:absolute before:inset-0 before:ml-5 before:-translate-x-px md:before:mx-auto md:before:translate-x-0 before:h-full before:w-0.5 before:bg-gradient-to-b before:from-transparent before:via-gray-300 before:to-transparent dark:before:via-gray-700">

        {stories.map((story, index) => (
          <div class="relative flex items-center justify-between md:justify-normal md:odd:flex-row-reverse group is-active">

            <!-- Icon / Dot -->
            <div class="flex items-center justify-center w-10 h-10 rounded-full border border-surface dark:border-dark-surface bg-surface dark:bg-dark-surface shadow shrink-0 md:order-1 md:group-odd:-translate-x-1/2 md:group-even:translate-x-1/2 z-10">
               <span class="material-icons text-primary">history_edu</span>
            </div>

            <!-- Card -->
            <div class="w-[calc(100%-4rem)] md:w-[calc(50%-2.5rem)] p-6 bg-surface dark:bg-dark-surface rounded-xl shadow-lg border border-gray-100 dark:border-gray-800 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
              <div class="flex items-center justify-between mb-4">
                 <time datetime={story.data.pubDate.toISOString()} class="text-sm font-bold text-primary">
                    {story.data.pubDate.toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })}
                 </time>
              </div>

              <h3 class="text-2xl font-bold mb-3 text-on-surface dark:text-dark-on-surface">
                 <a href={`/mi-historia/${story.slug}`} class="hover:text-primary transition-colors">
                    {story.data.title}
                 </a>
              </h3>

              <p class="text-on-surface-variant dark:text-dark-on-surface-variant mb-4 line-clamp-3">
                 {story.data.description}
              </p>

              <a href={`/mi-historia/${story.slug}`} class="inline-flex items-center text-primary font-medium hover:text-primary-dark transition-colors text-sm uppercase tracking-wide">
                 Leer más <span class="material-icons text-sm ml-1">arrow_forward</span>
              </a>
            </div>
          </div>
        ))}

        {stories.length === 0 && (
          <div class="text-center py-12">
            <p class="text-on-surface-variant dark:text-dark-on-surface-variant">Aún no hay historias publicadas.</p>
          </div>
        )}

      </div>
    </div>
  </section>
</Layout>

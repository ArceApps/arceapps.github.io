---
import { Image } from "astro:assets";
import brandIcon from "../assets/brand-icon.png";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const currentYear = new Date().getFullYear();
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-surface-variant dark:bg-dark-surface-variant pt-16 pb-8 border-t border-gray-200 dark:border-gray-800 transition-colors duration-300 cv-auto" style="contain-intrinsic-size: 400px;">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-12">
      <!-- Brand -->
      <div class="col-span-1 md:col-span-2">
        <a href={lang === 'es' ? '/es' : '/'} data-astro-prefetch class="flex items-center gap-2 group mb-4 focus-visible:ring-2 focus-visible:ring-primary focus-visible:outline-none rounded-lg p-1 -ml-1">
          <Image
            src={brandIcon}
            alt="ArceApps Logo"
            width={32}
            height={32}
            class="w-8 h-8 rounded-lg"
          />
          <span class="text-xl font-bold tracking-tight text-on-surface dark:text-dark-on-surface">
            Arce<span class="text-primary">Apps</span>
          </span>
        </a>
        <p class="text-on-surface-variant dark:text-dark-on-surface-variant leading-relaxed max-w-sm">
          {t('footer.brand_desc')}
        </p>
      </div>

      <!-- Links -->
      <div>
        <h3 class="font-bold text-on-surface dark:text-dark-on-surface mb-4">{t('footer.navigation')}</h3>
        <ul class="space-y-3">
          <li><a href={lang === 'es' ? '/es' : '/'} data-astro-prefetch class="text-on-surface-variant dark:text-dark-on-surface-variant hover:text-primary transition-colors focus-visible:ring-2 focus-visible:ring-primary focus-visible:outline-none rounded">{t('nav.home')}</a></li>
          <li><a href={lang === 'es' ? '/es/apps' : '/apps'} data-astro-prefetch class="text-on-surface-variant dark:text-dark-on-surface-variant hover:text-primary transition-colors focus-visible:ring-2 focus-visible:ring-primary focus-visible:outline-none rounded">{t('nav.apps')}</a></li>
          <li><a href={lang === 'es' ? '/es/about-me' : '/about-me'} data-astro-prefetch class="text-on-surface-variant dark:text-dark-on-surface-variant hover:text-primary transition-colors focus-visible:ring-2 focus-visible:ring-primary focus-visible:outline-none rounded">{t('nav.about')}</a></li>
          <li><a href={lang === 'es' ? '/es/about-me#contact' : '/about-me#contact'} data-astro-prefetch class="text-on-surface-variant dark:text-dark-on-surface-variant hover:text-primary transition-colors focus-visible:ring-2 focus-visible:ring-primary focus-visible:outline-none rounded">{t('footer.contact')}</a></li>
        </ul>
      </div>

      <!-- Legal & Social -->
      <div>
        <h3 class="font-bold text-on-surface dark:text-dark-on-surface mb-4">{t('footer.legal')}</h3>
        <ul class="space-y-3">
          <li><a href={lang === 'es' ? '/es/privacy-policy' : '/privacy-policy'} data-astro-prefetch class="text-on-surface-variant dark:text-dark-on-surface-variant hover:text-primary transition-colors focus-visible:ring-2 focus-visible:ring-primary focus-visible:outline-none rounded">{t('footer.privacy')}</a></li>
        </ul>

        <div class="mt-6 flex gap-4">
            <!-- Google Play Icon -->
            <a href="https://play.google.com/store/apps/developer?id=Arce+Apps" target="_blank" rel="noopener noreferrer" class="text-on-surface-variant dark:text-dark-on-surface-variant hover:text-primary transition-colors focus-visible:ring-2 focus-visible:ring-primary focus-visible:outline-none rounded p-1" aria-label="Google Play">
                <span class="material-icons" aria-hidden="true">shop</span>
            </a>
            <!-- GitHub Icon -->
            <a href="https://github.com/arceapps" target="_blank" rel="noopener noreferrer" class="text-on-surface-variant dark:text-dark-on-surface-variant hover:text-primary transition-colors focus-visible:ring-2 focus-visible:ring-primary focus-visible:outline-none rounded p-1" aria-label="GitHub">
                <span class="material-icons" aria-hidden="true">code</span>
            </a>
        </div>
      </div>
    </div>

    <div class="border-t border-gray-300 dark:border-gray-700 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-on-surface-variant/80 dark:text-dark-on-surface-variant/80">
      <p>{t('footer.copyright').replace('©', `© ${currentYear}`)}</p>
      <p>{t('footer.designed_with')} <span class="text-secondary">♥</span> y Material Design.</p>
    </div>
  </div>
</footer>

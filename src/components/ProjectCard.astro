---
interface Props {
  title: string;
  description: string;
  image?: string;
  tags: string[];
  link: string;
}

const { title, description, image, tags, link } = Astro.props;
---

<a
  href={link}
  class="group relative block rounded-3xl overflow-hidden transition-all duration-500 hover:scale-105 hover:-rotate-1"
>
  <!-- Gradient Border Effect -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-primary via-accent to-secondary rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-xl"
  >
  </div>

  <div
    class="relative bg-white dark:bg-slate-900 rounded-3xl overflow-hidden border-2 border-slate-200 dark:border-slate-800 group-hover:border-transparent transition-all duration-500 shadow-lg"
  >
    <!-- Image Container with Overlay -->
    <div class="relative aspect-[4/3] overflow-hidden">
      {
        image ? (
          <img
            src={image}
            alt={title}
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-125"
          />
        ) : (
          <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-slate-200 to-slate-300 dark:from-slate-800 dark:to-slate-900">
            <svg
              class="w-24 h-24 text-slate-400 dark:text-primary/20"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
              />
            </svg>
          </div>
        )
      }

      <!-- Gradient Overlay -->
      <div
        class="absolute inset-0 bg-gradient-to-t from-slate-200 via-slate-200/50 dark:from-slate-900 dark:via-slate-900/50 to-transparent opacity-80 group-hover:opacity-60 transition-opacity duration-500"
      >
      </div>

      <!-- Tags on Image -->
      <div
        class="absolute bottom-4 left-4 right-4 flex flex-wrap gap-2 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500"
      >
        {
          tags.slice(0, 2).map((tag, index) => (
            <span
              class="px-3 py-1 rounded-lg text-xs font-bold bg-gradient-to-r from-primary to-accent text-white shadow-lg"
              style={`animation-delay: ${index * 100}ms`}
            >
              {tag}
            </span>
          ))
        }
      </div>
    </div>

    <!-- Content -->
    <div class="p-6 space-y-4">
      <h3
        class="text-2xl font-black text-slate-900 dark:text-white group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-primary group-hover:to-secondary transition-all duration-300"
      >
        {title}
      </h3>

      <p
        class="text-slate-600 dark:text-slate-400 text-sm leading-relaxed line-clamp-2"
      >
        {description}
      </p>

      <!-- CTA Button -->
      <div
        class="pt-2 flex items-center text-primary group-hover:text-secondary font-bold transition-colors duration-300"
      >
        <span>Ver Detalles</span>
        <svg
          class="w-5 h-5 ml-2 transform group-hover:translate-x-2 transition-transform duration-300"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
        >
      </div>
    </div>
  </div>
</a>
